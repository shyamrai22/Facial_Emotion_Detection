{
  "services": [
    {
      "name": "emotion-detection-app",
      "type": "web",
      "env": "python",
      "buildCommand": "pip install -r requirements.txt",
      "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT",
      "envVars": {
        "PYTHONUNBUFFERED": "true"
      },
      "autoDeploy": true,
      "region": "us",
      "disk": {
        "size": "1GB",
        "mountPath": "/data"
      }
    }
  ]
}
